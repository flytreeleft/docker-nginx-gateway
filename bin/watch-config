#!/bin/bash

while [[ -n $1 ]]; do
    case $1 in
        --)
            shift
            CMD=$@
            break
        ;;
    esac
    shift
done

if [ "x$CMD" = "x" ]; then
    echo "Usage: $0 -- COMMAND"
    exit 0
fi

VHOSTS="${VHOSTD}"
STREAMS="${STREAMD}"
EPAGES="${EPAGED}"

update_ref() {
    local file=$1
    local timestamp=`date +%Y%m%d%H%M.%S`

    touch "${file}" -t ${timestamp}
}

is_newer() {
    local ref="$1"
    local result="false"

    shift
    while [[ -n "$1" ]]; do
        if [[ ! -e "$ref" || "x$(find "$1" -newer "$ref")" != "x" ]]; then
            result="true"
            break
        fi
        shift
    done

    echo "$result"
}

sleep 10s && eval "${CMD}"

REF_FILE=/tmp/config-check.ref
while true; do
    sleep 10s
    if [[ $(is_newer "${REF_FILE}" "${VHOSTS}" "${STREAMS}" "${EPAGES}") = "true" ]]; then
        update_ref "${REF_FILE}"
        eval "${CMD}"
    fi
done
