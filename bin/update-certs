#!/bin/bash

LOCK=${CERTBOT}/.lck

if [ "x$LOCK" = "x" ]; then
    echo "CERTBOT_LOCK is undefined."
    exit 1
fi

if [ -e ${LOCK} ]; then
    exit 0
else
    touch ${LOCK}
fi

/usr/bin/acme.sh \
    --cron \
    --home /opt/acme.sh \
    --config-home "${CERT_DIR}/config" \
    --reloadcmd "/usr/sbin/nginx -s reload" \
    2>/dev/null

rm ${LOCK}
